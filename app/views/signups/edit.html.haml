= form_for @signup, :html => { :class => 'form-horizontal' } do |f|
  .form-group.form-control
    = @signup.email
  .form-group.form-control
    = @signup.imdb
  .form-group.form-control
    = @signup.website
  .form-group
    = f.label 'Skills', :class => 'form-control'
    = f.collection_select(:skills, Skill.all, :id, :name, {}, {:multiple => true, :id => 'skills_select1', :class => 'form-control'})
  .form-group
    = f.submit 'Apply', :class => 'btn btn-lg btn-primary btn-block'
